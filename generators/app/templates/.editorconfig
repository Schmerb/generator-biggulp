root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{build/**/*.css,build/**/*.scss,build/**/*.less,build/**/*.sass}]
indent_size = 4
end_of_line = lf

[{build/js/**/*.js}]
indent_size = 2

[*.ejs]
indent_size = 2

[{gulp/**/*.js}]
indent_size = 2
